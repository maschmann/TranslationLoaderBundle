<!DOCTYPE html>
<html lang="{% block language %}en{% endblock %}">
<head>
    <title>{% block title %}TranslationLoader{% endblock %}</title>
    {% block meta %}
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        <meta name="keywords" content="">
    {% endblock %}

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/themes/black-tie/jquery-ui.css" />
    <link rel="stylesheet" href="/bundles/asmtranslationloader/css/min/core.css">
    {% block css %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block header %}
    {{ include('AsmTranslationLoaderBundle:Partial:header.html.twig', {'page': 'main'}) }}
{% endblock %}
<div class="container-fluid page-default">
    <div class="row">
    {% block body %}{% endblock %}
    </div>
</div>
{% block footer %}
    {{ include('AsmTranslationLoaderBundle:Partial:footer.html.twig') }}
{% endblock %}
<div id="asm-dialog">
    <div class="content"></div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js"></script>
<script src="/bundles/asmtranslationloader/js/min/core.js"></script>
{% block javascript %}{% endblock %}
<script type="text/javascript">
    ;
    (function ($, undefined) {
        window.asm = window.asm || {};
        asm.options = asm.options || {};
        $.extend(asm.options, {
            env: '{{ app.environment }}'
        });
        asm.translations = asm.translations || {};
        $.extend(asm.translations, {
            loading: '{{ "loading"|trans }}',
            confirm_delete: '{{ "confirm_delete"|trans }}'
        });
    })(jQuery);

    document.body.className = 'asm-init {{ app.environment }}'
</script>
</body>
</html>
